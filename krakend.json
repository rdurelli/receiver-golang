{
  "version": 3,
  "name": "KrakenD on k8s",
  "port": 8080,
  "host": [
    "http://golang-receiver:3000"
  ],
  "extra_config": {
    "telemetry/opentelemetry": {
      "service_name": "krakend_prometheus_service",
      "metric_reporting_period": 1,
      "exporters": {
        "prometheus": [
          {
            "name": "local_prometheus",
            "port": 9090,
            "process_metrics": true,
            "go_metrics": true
          }
        ]
      }
    },
    "telemetry/logging": {
      "level": "ERROR",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true,
      "format": "default",
      "syslog_facility": "local3"
    }
  },
  "output_encoding": "json",
  "endpoints": [
    {
      "input_headers": [
        "*"
      ],
      "input_query_strings": [
        "*"
      ],
      "endpoint": "/api/v1/convert",
      "method": "GET",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/api/v1/convert",
          "encoding": "no-op",
          "sd": "static",
          "method": "GET",
          "extra_config": {
            "qos/ratelimit/proxy": {
              "max_rate": 50,
              "capacity": 50,
              "every": "1s"
            }
          },
          "host": [
            "http://golang-receiver:3000"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "input_headers": [
        "*"
      ],
      "input_query_strings": [
        "*"
      ],
      "endpoint": "/api/v1/login",
      "method": "POST",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/api/v1/login",
          "encoding": "no-op",
          "sd": "static",
          "method": "POST",
          "extra_config": {
            "qos/ratelimit/proxy": {
              "max_rate": 50,
              "capacity": 50,
              "every": "1s"
            }
          },
          "host": [
            "http://golang-receiver:3000"
          ],
          "disable_host_sanitize": false
        }
      ]
    }
  ],
  "timeout": "5000ms"
}